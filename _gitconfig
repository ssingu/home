[user]
    name = Sumio Singu
    email = sumio.singu@access-company.com

[include]
    path = .gitconfig.private
    path = .gitconfig.local

[core]
    whitespace = trailing-space
    editor = vi

[push]
    default = current

[color]
    ui = auto

[alias]
    s     = status
    a     = add
    r     = rm
    mv    = mv
    f     = fetch
    t     = tag
    d     = diff
    g     = grep -n
    cp    = cherry-pick
    cpc   = cherry-pick --continue
    cpa   = cherry-pick --abort

    pl    = pull
    plf   = pull -f

    ps    = push
    psf   = push -f

    b     = branch
    bd    = branch -D

    co    = checkout
    cob   = checkout -b
    com   = checkout master
    cos   = checkout stable
    coo   = checkout --ours
    cot   = checkout --theirs

    l     = log
    lm    = log master
    ls    = log stable
    llr   = log --oneline --left-right
    llrms = log --oneline --left-right master...stable

    rs    = reset
    rsh   = reset --hard
    rshm  = reset --hard origin/master
    rshs  = reset --hard origin/stable
    rshum = reset --hard upstream/master
    rshus = reset --hard upstream/master

    c     = commit
    cm    = commit -m
    ca    = commit --amend

    rb    = rebase
    rbm   = rebase master
    rbum  = rebase upstream/master
    rbi   = rebase -i
    rbc   = rebase --continue
    rba   = rebase --abort

    m     = merge
    ms    = merge --squash

    cfd   = clean -fd

    si    = submodule init
    su    = submodule update

    sh    = show
    sh1   = show HEAD~
    sh2   = show HEAD~2
    sh3   = show HEAD~3
    sh4   = show HEAD~4
    sh5   = show HEAD~5
